package com.jsp.SpringJDBC.test;

import org.springframework.context.ApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;
import org.springframework.jdbc.core.JdbcTemplate;

import com.jsp.SpringJDBC.DAO.EmployeeDAO;
import com.jsp.SpringJDBC.entity.Employee;

public class Test {

	@SuppressWarnings("resource")
	public static void main(String[] args) {

		ApplicationContext context = new ClassPathXmlApplicationContext("config.xml");
		EmployeeDAO dao = (EmployeeDAO) context.getBean("employeeDAO");

		Employee emp = new Employee();
		emp.setId(3);
		emp.setFirstName("Deepika");
		emp.setLastName("Padukone");

		int data = dao.create(emp);

		System.out.println("Number of Data Interted Successfully: " + data);

	}
}
